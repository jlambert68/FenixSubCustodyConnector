{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema used to validate main response from TestApiEngine",
  "type": "object",
  "properties": {
    "testStepExecutionStatus": {
      "type": "object",
      "properties": {
        "statusCode": {
          "type": "integer"
        },
        "statusText": {
          "type": "string"
        }
      },
      "required": [
        "statusCode",
        "statusText"
      ],
      "additionalProperties": false
    },
    "details": {
      "type": "string"
    },
    "responseValue": {
      "type": "string"
    },
    "executionTimeStamp": {
      "type": "string",
      "format": "date-time"
    },
    "executionId": {
      "type": "string",
      "format": "uuid"
    },
    "verdict": {
      "type": "string",
      "enum": [
        "Pass",
        "Fail"
      ]
    }
  },
  "required": [
    "testStepExecutionStatus",
    "details",
    "responseValue",
    "executionTimeStamp",
    "executionId",
    "verdict"
  ],
  "additionalProperties": false
}
